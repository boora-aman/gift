# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Vue Single File Components
[*.vue]
indent_style = space
indent_size = 2

# JavaScript and TypeScript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# CSS, SCSS, SASS, Less
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# HTML
[*.{html,htm}]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML
[*.xml]
indent_style = space
indent_size = 2

# Package files
[package.json]
indent_style = space
indent_size = 2

# Config files
[*.{config.js,config.ts}]
indent_style = space
indent_size = 2

# Vue config files
[{vue.config.js,vite.config.js,vite.config.ts}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Make files
[{Makefile,*.mk}]
indent_style = tab

# Batch files
[*.bat]
end_of_line = crlf
